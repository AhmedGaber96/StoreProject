
@model IEnumerable<Store>;

@{
    ViewData["Title"] = "Display all";
}

<h1 class="mt-5 mb-5 text-center">Display All Store</h1>
<a asp-action="Create" class="btn button-color">Create New Store +</a>

@if(Model.Count()>0){
 
 
        <table class="table table-striped  mt-4 " id="custome-table">
            <thead class="table-head-custome-bg ">
                <tr class="py-3">
                    <th class="text-center">@Html.DisplayNameFor(s => s.Id)</th>
                    <th class="text-center">@Html.DisplayNameFor(s => s.Name)</th>
                    <th class="text-center">Edit</th>
                    <th class="text-center">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var store in Model)
                {
                    <tr>
                        <td class="text-center fs-5">@store.Id</td>
                    <td class="text-center fs-5">@store.Name</td>
                    <td class="text-center"><a class="btn button-color" asp-action="Edit" asp-route-id="@store.Id"><i class="fa-solid fa-pen-to-square"></i></a></td>
                    <td class="text-center"><a class="btn btn-danger delete-btn" asp-action="Delete" asp-route-id="@store.Id"><i class="fa-solid fa-trash"></i></a></td>
                    </tr>
                }



            </tbody>
        </table>



}
else
{
    <h1>Display All Store</h1>
    <div class="mt-5">
        <p class="text-danger">There is now data</p>
         
    </div>
}
@section Scripts {

    <script>
        $(document).ready(function () {
            $('.delete-btn').on('click', function (e) {
                e.preventDefault(); 
                const confirmation = confirm("Are you sure you want to delete?");
                if (confirmation) {
                    window.location.href = $(this).attr('href');
                }
            });
        });
    </script>


}